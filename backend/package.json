{
  "name": "board-game-prototype-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": ">=22 <23"
  },
  "scripts": {
    "prepare": "cd ../ && git rev-parse --is-inside-work-tree >/dev/null 2>&1 && git config core.hooksPath .husky || true",
    "build": "tsc",
    "start": "npm run build && node dist/server.js",
    "dev": "ts-node-dev --env-file=.env --respawn --transpile-only --ignore-watch src/swagger-schemas.ts src/server.ts",
    "dev-without-artifacts": "SKIP_ARTIFACT_GENERATION=1 ts-node-dev --env-file=.env --respawn --transpile-only --ignore-watch src/swagger-schemas.ts src/server.ts",
    "wait-for-db": "ts-node src/scripts/waitForDb.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit && eslint --cache \"src/**/*.ts\" \"vitest.config.mts\"",
    "lint:fix": "eslint --cache \"src/**/*.ts\" \"vitest.config.mts\" --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,json,md}\"",
    "format:check": "prettier --check .",
    "check-artifacts": "ts-node src/scripts/checkArtifactsGenerationNeeded.ts",
    "generate-erd": "ts-node src/scripts/generateErd.ts",
    "generate-swagger": "ts-node src/scripts/generateSwagger.ts",
    "generate-swagger-output": "ts-node src/scripts/generateSwaggerOutput.ts",
    "generate-api-types": "ts-node src/scripts/generateApiTypes.ts",
    "generate-docs": "ts-node src/scripts/generateDocs.ts",
    "generate-artifacts": "npm run --silent generate-erd && npm run --silent generate-swagger && npm run --silent generate-swagger-output && npm run --silent generate-api-types && npm run --silent redoc",
    "redoc": "ts-node src/scripts/generateDocs.ts",
    "seed": "ts-node src/database/seed.ts",
    "seed:force": "ts-node src/database/seed.ts --force",
    "seed:verify": "ts-node src/database/verify-seed.ts",
    "clean-up-unused-images": "ts-node src/scripts/cleanUpUnusedImages.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "overrides": {
    "glob": "^11.0.3",
    "rimraf": "^4.4.1"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.799.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.12.0",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-session": "^1.18.1",
    "http-status-codes": "^2.3.0",
    "multer": "^1.4.5-lts.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.13.1",
    "sequelize": "^6.37.5",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typescript": "^5.8.2",
    "uuid": "^11.0.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@redocly/cli": "^1.34.4",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express-session": "^1.18.1",
    "@types/multer": "^1.4.12",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.7",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "sequelize-erd": "^1.3.1",
    "supertest": "^7.1.4",
    "swagger-typescript-api": "^13.0.28",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript-eslint": "^8.42.0",
    "vitest": "^3.2.4"
  }
}
